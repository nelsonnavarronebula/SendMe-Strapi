---
const { href, isPrimary } = Astro.props;

const baseClasses =
  "focus:outline-none font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 border hover:bg-primary/30";
const primaryClasses =
  "text-black bg-yellow-400 hover:bg-yellow-500 focus:ring-4 focus:ring-yellow-300 dark:focus:ring-yellow-900 border-primary";

const buttonClasses = `${baseClasses} ${isPrimary && primaryClasses}`;
---

<a href={href} class={buttonClasses}>
  <slot />
</a>
